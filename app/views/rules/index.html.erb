<h1>Listing rules</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Comment</th>
    <th>Points</th>
    <th>Status</th>
    <th>Game</th>
    <th>Question</th>
  </tr>

<% @rules.each do |rule| %>
  <tr>
    <td><%=h rule.name %></td>
    <td><%=h rule.comment %></td>
    <td><%=h rule.points %></td>
    <td><%=h rule.status %></td>
    <td><%=h rule.game_id %></td>
    <td><%=h rule.question_id %></td>
    <td><%= link_to 'Show', rule %></td>
    <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
    <td><%= link_to 'Destroy', rule, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New rule', new_rule_path %>