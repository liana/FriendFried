<h1>Listing games</h1>

<table>
  <tr>
    <th>Quiz</th>
    <th>Owner</th>
    <th>Status</th>
    <th>Start at</th>
    <th>End at</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%=h game.quiz_id %></td>
    <td><%=h game.owner_id %></td>
    <td><%=h game.status %></td>
    <td><%=h game.start_at %></td>
    <td><%=h game.end_at %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New game', new_game_path %>